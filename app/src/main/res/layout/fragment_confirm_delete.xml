<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="final_project.cs3174.montageapp.ConfirmDeleteFragment"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


            <TextView
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Are you sure you would like to delete all images and associated data? This action is irreversible."
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25dp" />

            <Button
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorAccent"
                android:text="Yes"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"
                android:id="@+id/yesDelete"/>

            <Button
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorAccent"
                android:text="No"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"
                android:id="@+id/noGoBack"/>
    </LinearLayout>

</FrameLayout>
